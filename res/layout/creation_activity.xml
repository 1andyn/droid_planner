<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
	    android:id="@+id/linearlayout"
	    android:paddingTop="10sp"
	    android:showDividers="middle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:divider="@color/LightSteelBlue"
	    android:orientation="vertical">

	    <TextView
	        android:paddingTop="15sp"
	        android:id="@+id/ce_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/ce_name"
	        android:textSize="20sp" />

	    <EditText
	        android:id="@+id/et_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/event_hint"
	        android:imeOptions="actionNext"
	        android:singleLine="true" />

	    <TextView
	        android:id="@+id/ce_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/ce_desc"
	        android:textSize="20sp" />

	    <EditText
	        android:id="@+id/et_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/desc_hint"
	        android:inputType="textPersonName"
	        android:imeOptions="actionDone" />

	    <TextView
	        android:id="@+id/ce_sttv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingTop="20sp"
	        android:text="@string/ce_stime"
	        android:textSize="20sp" />

	    <TimePicker
	        android:id="@+id/time_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:padding="30sp" />

	    <TextView
	        android:id="@+id/ce_ettv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_etime"
	        android:textSize="20sp" />

	    <TimePicker
	        android:id="@+id/time_end"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:padding="30sp" />

	    <TextView
	        android:id="@+id/ce_doe"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_doe"
	        android:textSize="20sp" />

	    <DatePicker
	        android:id="@+id/date_sel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:padding="30sp"
	        android:calendarViewShown="false" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="horizontal"
	        android:padding="30sp" >

	        <TextView
	            android:id="@+id/ce_alatv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="30sp"
	            android:text="@string/ce_alatv"
	            android:textSize="15sp" />

	        <ToggleButton
	            android:id="@+id/ce_alarm"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/ce_alarm"
	            android:textOff="@string/ce_d_ala"
	            android:textOn="@string/ce_e_ala" />
	    </LinearLayout>
	    
	    <!-- Add Color Selection Code -->

	    <Button
	        android:id="@+id/ce_create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_create" />
	    
	</LinearLayout>
</ScrollView>
