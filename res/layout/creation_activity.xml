<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
	    android:id="@+id/linearlayout"
	    android:paddingTop="1sp"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

	    <TextView
	        android:textColor="#FFFFFF"
	        android:paddingTop="15sp"
	        android:id="@+id/ce_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/ce_name"
	        android:textSize="20sp" />

	    <EditText
	        android:id="@+id/et_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/event_hint"
	        android:imeOptions="actionNext"
	        android:singleLine="true" />

	    <TextView
	        android:textColor="#FFFFFF"
	        android:id="@+id/ce_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/ce_desc"
	        android:textSize="20sp" />

	    <EditText
	        android:id="@+id/et_desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:ems="10"
	        android:hint="@string/desc_hint"
	        android:inputType="textPersonName"
	        android:imeOptions="actionDone" 
	        android:paddingBottom="20sp"/>

	    <TextView
	        android:textColor="#FFFFFF"
	        android:id="@+id/ce_sttv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:paddingTop="40dp"
	        android:text="@string/ce_stime"
	        android:textSize="20sp" />

	    <TimePicker
	        android:id="@+id/time_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:padding="10sp" />

	    <TextView
	        android:textColor="#FFFFFF"
	        android:id="@+id/ce_ettv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_etime"
	        android:textSize="20sp" />

	    <TimePicker
	        android:id="@+id/time_end"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:padding="10sp" />

	    <TextView
	        android:textColor="#FFFFFF"
	        android:id="@+id/ce_doe"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_doe"
	        android:textSize="20sp" />

	    <View 
	        android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" />
	    
	    <DatePicker
	        android:id="@+id/date_sel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:padding="10sp"
	        android:calendarViewShown="false" />
	    
	    <View 
	        android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#ffffff" />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="horizontal"
	        android:padding="30sp" >

	        <TextView
	            android:id="@+id/ce_alatv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="30sp"
	            android:text="@string/ce_alatv"
	            android:textColor="#FFFFFF"
	            android:textSize="15sp" />

	        <ToggleButton
	            android:id="@+id/ce_alarm"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/ce_alarm"
	            android:textOff="@string/ce_d_ala"
	            android:textOn="@string/ce_e_ala" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:padding="5sp" >

	       	<TextView
	        android:textColor="#FFFFFF"
	        android:paddingTop="15sp"
	        android:id="@+id/ce_rep_string"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/rp_rep"
	        android:textSize="20sp" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:orientation="horizontal"
	        android:paddingBottom="20sp" >

	        <ToggleButton
	            android:id="@+id/rp_sun"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_sun"
	            android:textOff="@string/rp_sun"
	            android:textOn="@string/rp_sun" />

	        <ToggleButton
	            android:id="@+id/rp_mon"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_mon"
	            android:textOff="@string/rp_mon"
	            android:textOn="@string/rp_mon" />

	        <ToggleButton
	            android:id="@+id/rp_tue"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_tue"
	            android:textOff="@string/rp_tue"
	            android:textOn="@string/rp_tue" />

	        <ToggleButton
	            android:id="@+id/rp_wed"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_wed"
	            android:textOff="@string/rp_wed"
	            android:textOn="@string/rp_wed" />

	        <ToggleButton
	            android:id="@+id/rp_thu"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_thu"
	            android:textOff="@string/rp_thu"
	            android:textOn="@string/rp_thu" />

	        <ToggleButton
	            android:id="@+id/rp_fri"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_fri"
	            android:textOff="@string/rp_fri"
	            android:textOn="@string/rp_fri" />

	        <ToggleButton
	            android:id="@+id/rp_sat"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="@string/rp_sat"
	            android:textOff="@string/rp_sat"
	            android:textOn="@string/rp_sat" />
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:orientation="vertical"
	        android:padding="20dp" >
	        
	    <TextView
	        android:textColor="#FFFFFF"
	        android:id="@+id/color_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/Color_Text"
	        android:textSize="20sp"
	        android:paddingBottom="20sp" />
	        
	    <com.larswerkman.holocolorpicker.ColorPicker
	        android:id="@+id/picker"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"/>
 
	    <com.larswerkman.holocolorpicker.SVBar
	        android:id="@+id/svbar"
	        android:layout_width="322dp"
	        android:layout_height="112dp"
	        android:layout_gravity="center"
	        android:layout_margin="8dip"/>
 
	    <com.larswerkman.holocolorpicker.OpacityBar
	        android:id="@+id/opacitybar"
	        android:layout_width="322dp"
	        android:layout_height="112dp"
	        android:layout_gravity="center"
	        android:layout_margin="8dip"/>
	    
	    </LinearLayout>

	    <Button
	        android:paddingBottom="20sp"
	        android:id="@+id/ce_create"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="@string/ce_create" />
	</LinearLayout>
</ScrollView>
